<p id="notice"><%= notice %></p>

<h1>Listing Item Carts</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_carts.each do |item_cart| %>
      <tr>
        <td><%= item_cart.item_id %></td>
        <td><%= item_cart.cart_id %></td>
        <td><%= link_to 'Show', item_cart %></td>
        <td><%= link_to 'Edit', edit_item_cart_path(item_cart) %></td>
        <td><%= link_to 'Destroy', item_cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

