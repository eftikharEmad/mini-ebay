<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :phone_number %>
      <%= f.phone_number_field :phone_number, class: 'form-control' %>

      <%= f.label :zipcode %>
      <%= f.zipcode_field :zipcode, class: 'form-control' %>

      <%= f.label :street_address, "Confirmation" %>
      <%= f.street_address_field :street_address, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
